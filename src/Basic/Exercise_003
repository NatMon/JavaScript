<script type="text/javascript">

    /*
    3. Write a JavaScript program to get the current date. 
       Expected Output : 
       mm-dd-yyyy, mm/dd/yyyy or dd-mm-yyyy, dd/mm/yyyy
    */

    var today = new Date();  
    var year = today.getFullYear();

    function getMonth() {
        var month = today.getMonth() + 1;
        if (month < 10) {
            month = '0' + month; 
        }
        return month;
    }

    function getDay() {
        var day = today.getDate();
        if (day < 10) {
            day = '0' + day;
        }
        return day;
    }

    document.write(getMonth() + '-' + getDay() + '-' + year + '<br />');
    document.write(getDay() + '-' + getMonth() + '-' + year + '<br />');
    document.write(getDay() + '/' + getMonth() + '/' + year + '<br />');

</script>
