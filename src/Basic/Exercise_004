/*
4. Write a JavaScript program to find the area of a triangle where lengths of the three of its sides are 5, 6, 7.
*/

<script type="text/javascript">
  
var side1 = 5;
var side2 = 6;
var side3 = 7;
  
function triangleSemiperimeter(side1, side2, side3) {
  var perimeter = side1 + side2 + side3;
  var semiper = perimeter * 0.5;
  var area = semiper * (semiper - side1) * (semiper - side2) * (semiper - side3); 
  area = Math.sqrt(area);
  return Math.round(area);
}
  
document.write(triangleSemiperimeter(side1, side2, side3));

</script>
